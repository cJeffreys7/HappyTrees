@model IEnumerable<HappyTrees.Models.Painting>

@{
    ViewData["Title"] = "AllPaintings";
}

<style>
    h1 {
        font-size : 96px;
    }


    h2 {
        font-size : 48px;
    }

</style>

<h1>All Paintings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Episode)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <h2>
                    @Html.DisplayFor(modelItem => item.Title)
                    <br>
                    <img src="@Url.Content(item.ThumbnailFile)" alt="Painting Thumbnail">
                </h2>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Episode)
            </td>
        </tr>
}
    </tbody>
</table>
